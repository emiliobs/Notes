@model IEnumerable<Notes.Models.Group>

@{
    ViewBag.Title = "Grupos";
}

<h2>Grupos</h2>

<p>
    @Html.ActionLink("Nuevo Grupo", "Create", new { }, new { @class = "btn btn-success"})
</p>
<table class="table">
    <tr>
        <th>
            @*@Html.DisplayNameFor(model => model.User.UserName)*@
            Profesor
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
          # Estudiantes
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.User.FullName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.GroupDetails.Count)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.GroupId }, new { @class = "btn btn-primary" }) 
            @Html.ActionLink("Detalles", "Details", new { id=item.GroupId }, new { @class = "btn btn-info" }) 
            @Html.ActionLink("Borrar", "Delete", new { id=item.GroupId }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
